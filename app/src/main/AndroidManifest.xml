<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="livechat.christopher.martin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="preferExternal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LiveChat">
        <activity
            android:name=".onboard.Username"
            android:exported="true" />
        <activity
            android:name=".signin.ResetPassword"
            android:exported="true" />
        <activity
            android:name=".signin.SignIn"
            android:exported="true" />
        <activity
            android:name=".signup.SignUp"
            android:exported="false" />
        <activity
            android:name=".onboard.Onboard"
            android:exported="true"
            android:label="Onboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>