<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboard.Username"
    android:background="@drawable/gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/username_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/container"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/username_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Choose a Username"
            android:textColor="@color/secondary_text"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="@id/username_container"
            app:layout_constraintStart_toStartOf="@id/username_container"
            app:layout_constraintTop_toTopOf="@id/username_container">

        </TextView>

        <EditText
            android:id="@+id/username_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/username_container"
            app:layout_constraintStart_toStartOf="@id/username_container"
            app:layout_constraintTop_toBottomOf="@id/username_title"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:padding="10dp"
            android:background="@drawable/edit_text">
        </EditText>

        <Button
            android:id="@+id/username_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:text="Next"
            app:layout_constraintStart_toStartOf="@+id/username_container"
            app:layout_constraintEnd_toEndOf="@+id/username_container"
            app:layout_constraintTop_toBottomOf="@+id/username_username"
            app:layout_constraintBottom_toBottomOf="@+id/username_container"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp">

        </Button>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>